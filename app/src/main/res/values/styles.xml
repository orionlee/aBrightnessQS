<?xml version="1.0" encoding="utf-8"?>
<!--
-->

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_Dialog_Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonStyle">@style/AppTheme_Dialog_Alert.Button.Borderless</item>
    </style>


    <style name="AppTheme_Dialog_Alert.Button.Borderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


    <style name="HeadingFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BodyFont" parent="@style/HeadingFont">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BodyEmFont" parent="@style/BodyFont">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescFont" parent="@style/BodyFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ValueFont" parent="@style/BodyFont">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryEdit</item>
    </style>

    <style name="EditFont" parent="@style/BodyFont">
        <item name="android:textColor">@color/colorPrimaryEdit</item>
    </style>

    <style name="LinkFont" parent="@style/BodyFont">
        <item name="android:textColor">@color/colorTextHyperlink</item>
    </style>

</resources>
